<ScreenManager>: 
    HomeScreen 
    AnotherScreen 
<HomeScreen>: 
    name: 'home' 
    RelativeLayout:
        size_hint: None, None
        size: self.size
        pos: self.pos
        Widget:
            pos: self.parent.pos
            size: 50, 50
            canvas:
                Color:
                    rgba: 0, 1, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
